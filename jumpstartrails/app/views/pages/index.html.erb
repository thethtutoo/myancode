<h1>Listing Pages</h1>
<table>
	<thead>
		<tr>
			<th>Title</th>
			<th>Slug</th>
			<th>Content</th>
			<th colspan="3"></th>
		</tr>
	</thead>

	<tbody>
		<% @pages.each do |page| %>
			<tr>
				<td>
					<%= page.title %>
				</td>
				<td>
					<%= page.slug %>
				</td>
				<td>
					<%= page.content %>
				</td>
			</tr>
		<% end %>
	</tbody>
</table>

<%= link_to "New Page", new_page_path %>